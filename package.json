{
	"name": "tsqllint-lite",
	"displayName": "tsqllint-lite",
	"description": "TSQLLint Check Tool",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.108.1"
	},
	"categories": ["Other"],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tsqllint-lite.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"build": "tsc -p tsconfig.json",
		"vscode:prepublish": "npm run build",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test": "vscode-test",
		"watch": "tsc -watch -p tsconfig.json"
	},
	"devDependencies": {
		"@types/vscode": "^1.108.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@biomejs/biome": "^1.9.4",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	}
}
